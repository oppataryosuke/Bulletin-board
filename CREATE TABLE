/*スレッド*/
CREATE TABLE 10_board_thread(
	th_id 		NUMBER(6) 		NOT NULL CONSTRAINT PK_Thread_id PRIMARY KEY
   ,th_title 	VARCHAR2(100) 	NOT NULL
   ,th_name 	VARCHAR2(20) 	NOT NULL
   ,th_icon 	NUMBER(2) 		NOT NULL
   ,th_date 	DATE 			DEFAULT sysdate
   ,th_description VARCHAR2(200)
   ,th_view 	NUMBER(4) 		DEFAULT 0
   ,th_good 	NUMBER(4) 		DEFAULT 0
);


/*レス*/
CREATE TABLE 10_board_res(
    res_id      number(6)       NOT NULL CONSTRAINT PK_board_res_Rid PRIMARY KEY
    ,th_id      number(6)       NOT NULL CONSTRAINT FK_board_res_Tid REFERENCES 10_board_thread(th_id)
    ,res_name   varchar2(20)    NOT NULL
    ,res_icon   number(2)       NOT NULL
    ,res_text   varchar2(500)   NOT NULL
    ,res_date   date            DEFAULT sysdate
    ,res_good   number(4)       DEFAULT 0
);

/*順序スレッド用*/
CREATE SEQUENCE 10_test0
  START WITH 1
  INCREMENT BY 1
  MAXVALUE 1000
  MINVALUE 1
  NOCYCLE
;

/*順序レス用*/
CREATE SEQUENCE 10_test1
  START WITH 1
  INCREMENT BY 1
  MAXVALUE 1000
  MINVALUE 1
  NOCYCLE
;
